@{
  Layout = "_Layout";
}

<div class="well well-body">
  <form action="/cuisines/clear" method="post">
    <button class="btn btn-danger custom-btn" type="submit">Clear All Cuisines</button>
  </form>
  <h1>Cuisines</h1>

  @if (Model.Count == 0)
  {
      <h4><em><b>ALERT: </b>You don't have any types of cuisine entered yet!</em></h4>
  }
  else
  {
      <div class="row">
        <div class="container">
        </div>
      </div>
      <br>
      @foreach(var cuisine in Model)
      {
        <span class="custom-list"><a href="/cuisines/@cuisine.Id">@cuisine.Name</a></span>
      }
    <br>
    <br>
    <br>
  }

  <ul class="list-inline">
    <li><a class="other-link" href="/cuisines/new">Add Type of Cuisine</a></li>
    <li><a class="other-link" href="/">Return to Home</a></li>
  </ul>
</div>
